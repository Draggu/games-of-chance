{
    "collection": "@nestjs/schematics",
    "sourceRoot": "src",
    "compilerOptions": {
        "plugins": [
            {
                "name": "@nestjs/swagger",
                "options": {
                    "classValidatorShim": true,
                    "introspectComments": true,
                    "dtoFileNameSuffix": [".input.ts"]
                }
            },
            {
                "name": "@nestjs/graphql",
                "options": {
                    "introspectComments": true
                }
            }
        ]
    }
}
